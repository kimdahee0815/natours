extends base

block content 
    main.main 
        .card-container
            if reviews.length === 0
                h2.heading-secondary.ma-bt-md No Reviews found for your search
            else
                each review in reviews 
                    .card
                        .card__header
                            .card__picture
                                .card__picture-overlay &nbsp;
                                img.card__picture-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
                            h3.heading-tertirary
                                span= review.tour.name

                        .card__details
                            h4.card__sub-heading= `${review.tour.difficulty} ${review.tour.duration}-day tour`
                            p.card__text= review.tour.summary
                            h4.card__sub-heading= `My Review üòÉ`
                            p.reviews__text= review.review
                            h4.card__sub-heading= `My Rating ‚≠ê` 
                            .reviews__rating
                              each star in [1,2,3,4,5]
                                svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active':'inactive'}`)
                                    use(xlink:href='/img/icons.svg#icon-star')
                            h4.card__sub-heading= `My Review Date üóìÔ∏è`
                            p.card__text= review.createdAt.toLocaleString('en-us', { day: '2-digit', month: '2-digit', year: 'numeric' })

                        .card__footer
                            p
                                span.card__footer-value= `$${review.tour.price}`
                                | 
                                span.card__footer-text per person
                            p.card__ratings
                                span.card__footer-value= review.tour.ratingsAverage
                                | 
                                span.card__footer-text= `rating (${review.tour.ratingsQuantity})`
                            a.btn.btn--green.btn--small(href=`/tour/${review.tour.slug}`) Details